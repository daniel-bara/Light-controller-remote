<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sending commands to URL"
        android:textColor="@android:color/secondary_text_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:weightSum="0"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonOn"
                android:layout_height="wrap_content"
                android:onClick="onClickTurnOn"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Turn On"
                android:textColor="@android:color/primary_text_dark" />

            <Button
                android:id="@+id/buttonOff"
                android:layout_height="wrap_content"
                android:onClick="onClickTurnOff"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Turn Off"
                android:textColor="@android:color/primary_text_dark" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Custom message / url"
                android:inputType="textPersonName"
                android:textColor="@android:color/secondary_text_dark"
                android:textColorHint="@android:color/secondary_text_dark" />

            <Button
                android:id="@+id/buttonChangeUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickModifyUrl"
                android:text="update URL"
                android:textColor="@android:color/primary_text_dark" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>